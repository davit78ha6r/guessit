            document.body.style.backgroundColor = "#ff6e6e";
        }
        if (won === true){
            document.body.style.backgroundColor = "#76f597";
            document.getElementById("code").disabled = true;
            document.getElementById("button").style.display = 'none';
            console.log(won)
